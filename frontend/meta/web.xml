<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	
	<display-name>SubEtha Frontend</display-name>
	
	<filter>
		<filter-name>SecurityAssociationFilter</filter-name>
		<filter-class>
			org.subethamail.web.security.SecurityAssociationFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>SecurityAssociationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>Backend</servlet-name>
		<servlet-class>org.subethamail.web.Backend</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>ListServlet</servlet-name>
		<servlet-class>org.subethamail.web.servlet.ListServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ListServlet</servlet-name>
		<url-pattern>/list/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>InjectorServlet</servlet-name>
		<servlet-class>org.subethamail.web.servlet.InjectorServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>InjectorServlet</servlet-name>
		<url-pattern>/inject</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
		<servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/dwr/*</url-pattern>
	</servlet-mapping>
</web-app>
